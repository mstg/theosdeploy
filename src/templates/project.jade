extend layout
block page
    div.row
        div.col-lg-12
            h1.page-header
                | #{project.name}
                br
                a.btn.btn-primary.deploybtn(href='#{path}')
                    | Deploy and build
    div.row
        div.col-lg-4
            div.panel.panel-default
                div.panel-heading
                    | Project information
                div.panel-body
                    div.list-group
                        li.list-group-item
                            | Version: #{project.version}
                        li.list-group-item
                            | Architectures: #{project.archs}
                        li.list-group-item
                            | Target: #{project.target}
                        li.list-group-item
                            | Files: #{project.files}
                        li.list-group-item
                            | Frameworks: #{project.frameworks}
                        li.list-group-item
                            | Private frameworks: #{project.private_frameworks}
                        li.list-group-item
                            | after-install: #{project.after_install}
        div.col-lg-4.pull-right
            div.panel.panel-default
                div.panel-heading
                    | Device to deploy to
                div.panel-body
                    div.list-group
                        each device in devices
                            li.list-group-item.device(device='#{device}')
                                | #{device}
